{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "target": "es2018",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "lib/",
    "pretty": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "server/**/*.ts",
    "index.d.ts"
  ],
  "exclude": [
    "dashboard"
  ]
}